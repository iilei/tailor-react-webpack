{
  "presets": ["airbnb", "es2015", "react", "stage-0"],
  "plugins": [
    "syntax-trailing-function-commas",
    "transform-decorators-legacy",
    ["module-resolver", {
      "root": ["./src", "./"]
    }]
  ],
  "env": {
    "development": {
      "plugins": [
        ["react-intl", {
          "messagesDir": "./build/messages/",
          "enforceDescriptions": true,
          "removeExtractedData": true
        }]
      ]
    }
  }
}
